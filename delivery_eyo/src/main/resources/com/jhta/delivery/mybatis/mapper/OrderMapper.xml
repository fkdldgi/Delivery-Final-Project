<!--/////////////// insert 부분 //////////////////////-->	
	<!-- 주문  -->
	<insert id="Order_Main_insert" parameterType="com.jhta.delivery.vo.Order_MainVo">
		insert into ORDER_MAIN values(ORDER_MAIN_SEQ.nextval,sysdate,null,null,#{member_num},#{addr_num},#{addr_detail},1,'주문요청',1,#{owner_requests},#{rider_requests},#{total_price},0)
	</insert>
	
	<!-- 주문메뉴 옵션   -->
	<insert id="Order_Menu_Option_insert" parameterType="com.jhta.delivery.vo.Order_Menu_OptionVo">
		insert into ORDER_MENU values(ORDER_MENU_SEQ.nextval,ORDER_MAIN_SEQ.CURRVAL,#{menu_num},#{count})
	</insert>
	
	<!-- 주문메뉴  -->
	<insert id="Order_Menu_insert" parameterType="com.jhta.delivery.vo.Order_MenuVo">
		insert into ORDER_MENU_OPTION values(ORDER_MENU_OPTION.nextval,#{munu_option_num},ORDER_MENU_SEQ.CURRVAL)
	</insert>
